        local function rainbowText()
        while true do
            for i = 0, 255, 5 do
                Title.TextColor3 = Color3.fromRGB(i, 0, 255 - i)
                wait(0.05)
            end
            for i = 255, 0, -5 do
                Title.TextColor3 = Color3.fromRGB(255 - i, i, 0)
                wait(0.05)
            end
            for i = 0, 255, 5 do
                Title.TextColor3 = Color3.fromRGB(0, 255 - i, i)
                wait(0.05)
            end
        end
    end

